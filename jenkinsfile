pipeline {
  agent { docker { image 'python:3.8.13' } }
  stages {
    stage('build') {
      steps {
        sh 'pip install -r requirements_dev.txt'
      }
    }
    stage('test') {
      steps {
        sh 'pytest'
      }
      post {
        always {
          junit 'test-reports/*.xml'
        }
      }    
    }
  }
}